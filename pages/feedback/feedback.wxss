/* pages/feedback/feedback.wxss */
.feedback {
  position: relative;
}

.feedback .feedback-emit {
  position: absolute;
  bottom: 60rpx;
  right: 30rpx;

  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;

  background-image: linear-gradient(-20deg, #b721ff 0%, #21d4fd 100%);
  border-radius: 100%;
  box-shadow: 0 0 35rpx rgba(0, 0, 0, 0.3);
}

.feedback .feedback-emit image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.feedback .feedback-tabel {
  background-color: #fff;
}