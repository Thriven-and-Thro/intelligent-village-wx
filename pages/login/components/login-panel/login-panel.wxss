.login-panel {
  font-size: 30rpx;
  padding: 5px;
}
.login-panel input {
  padding: 10rpx;
  margin-bottom: 36rpx;
  border-bottom: 1px solid #333333;
  font-size: 35rpx;
}
.login-panel checkbox {
  margin-top: 20rpx;
  vertical-align: 4rpx;
  transform: scale(0.8);
}
.login-panel button {
  width: 100%;
  text-align: center;
  line-height: 45rpx;
  margin: 10rpx 0;
  background-image: linear-gradient(-20deg, #b721ff 0%, #21d4fd 100%);
  color: #fff;
}
