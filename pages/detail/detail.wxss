/* pages/detail/detail.wxss */
.detail {
  position: relative;
  padding: 0 35rpx;
}

.detail .detail-user {
  display: flex;
  align-items: center;

  padding: 20rpx 0 40rpx 0;
  height: 80rpx;
}

.detail .detail-user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  object-fit: cover;
}

.detail .detail-user .user-name {
  flex: 1;
  padding: 0 20rpx;
}

.detail .feedback,
.detail .area_reply,
.detail .user_reply {
  margin: 30rpx 0;
  padding: 25rpx;
  background-color: #f7f8fd;
  border-radius: 35rpx;
}

.detail .feedback>view:first-child,
.detail .area_reply>view:first-child,
.detail .user_reply>view:first-child {
  padding: 15rpx 0;
  color: #3a377f;
  font-weight: 600;
}

.detail .feedback>view:first-child text {
  padding: 0 10rpx;
  font-size: 25rpx;
  line-height: 30rpx;
  color: #fff;
  border-radius: 15rpx;
  background-color: #909399;
}

.detail .area_reply.reject {
  background-color: #fef0f0;
}

.detail .area_reply.success {
  background-color: #f0f9eb;
}

.detail .feedback>view:first-child text.success {
  background-color: #67c23a;
}

.detail .feedback>view:first-child text.reject {
  background-color: #f56c6c;
}