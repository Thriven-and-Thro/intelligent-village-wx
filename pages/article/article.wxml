<!--pages/article/article.wxml-->
<view class="article">
  <view class="article-title">{{title}}</view>
  <content content="{{content}}" user="{{user}}" date="{{date}}"></content>
  <view class="article-comments">
    <view class="comments-title">
      <view>评论</view>
      <view>{{commentItems.length}}条</view>
    </view>
    <comment wx:for="{{commentItems}}" wx:key="com_id" content="{{item.content}}" date="{{item.date}}"
      user="{{item.user}}" com_id="{{item.com_id}}"></comment>
  </view>
</view>
<deliver></deliver>