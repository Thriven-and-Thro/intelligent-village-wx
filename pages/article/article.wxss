/* pages/article/article.wxss */
.article {
  padding: 0 35rpx 60rpx 35rpx;
}

.article .article-title {
  padding: 25rpx 0;
  font-size: 40rpx;
  font-weight: 700;
  color: #21206a;
  word-wrap: break-word;
}

.article .article-comments {
  margin: 20rpx 0 100rpx 0;
  border-top: 1px solid #ddd;
}

.article-comments  .comments-title {
  display: flex;
  justify-content: space-between;

  padding: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #21206a
}

.article-comments  .comments-title view:last-child {
  color: #a5a2c2;
}