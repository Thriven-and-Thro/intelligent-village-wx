/* pages/article/component/comment.wxss */
.comment {
  padding-right: 20rpx;
  margin-bottom: 20rpx;
}

.comment .comment-user {
  display: flex;
  align-items: center;
}

.comment .comment-user .name {
  flex: 1;
  padding: 0 20rpx;
  color: #3a377f;
  font-weight: 550;
}

.comment .comment-user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  object-fit: cover;
}

.comment .comment-user text{
  color: #f67878;
}

.comment .content,
.comment .footer {
  margin-left: 100rpx;
}

.comment .content {
  padding-bottom: 20rpx;
  word-wrap: break-word;
}

.comment .footer {
  display: flex;
  justify-content: space-between;
  color: #a5a2c2;
}